<% include layouts/standart.ejs %>


    <div class='form-container'>
        <form method="POST" action="/" class='post-form'>
            <textarea name="post" cols="30" rows="10" placeholder="What's on your mind?"></textarea>
            <input type="text" placeholder="name" name="name">
            <button class='submit-btn'>Submit</button>
        </form>
    </div>
    <div class='centering-container'>
        <div class='posts-container'>
            <% posts.forEach(function(post){ %>
            <div class='post-container'>
                <div class='post-text'>
                    <%=post.post %>
                </div>
                <div class='post-username'>
                    <a href='/user/<%=post.posted_by %>'><%=post.posted_by %></a>
                </div>
                <div class='x-delete'><a href='post/delete/<%= post.id %>'>&#10005;</a></div>
            </div>
            <% }) %>
        </div>
    </div>
    <script src='app.js'></script>
